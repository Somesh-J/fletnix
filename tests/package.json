{
  "name": "fletnix-tests",
  "version": "1.0.0",
  "description": "E2E tests for FletNix application using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:api": "playwright test tests/api/",
    "test:e2e": "playwright test tests/ui/",
    "test:auth": "playwright test tests/api/auth.spec.js tests/ui/auth.spec.js",
    "test:shows": "playwright test tests/api/shows.spec.js",
    "test:search": "playwright test tests/ui/search-filters.spec.js",
    "test:responsive": "playwright test tests/ui/responsive.spec.js",
    "test:report": "playwright show-report",
    "test:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1"
  }
}
